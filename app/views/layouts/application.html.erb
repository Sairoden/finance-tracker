<!DOCTYPE html>
<html>
  <head>
    <title>FinanceTracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'da-taturbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/navbar" %>

    <div class="container">
      <p class="notice" class="alert alert-warning"> <%= notice %> </p>
      <p class="alert" class="alert alert-danger"> <%= alert %> </p>
      
      <%= yield %>
    </div>

  </body>
</html>
